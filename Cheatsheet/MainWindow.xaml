<Window x:Class="Cheatsheet.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Multi-Threading WPF App" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Button Content="Start Threads" Click="StartThreads_Click" Width="150" Margin="5"/>
            <Button Content="Stop Threads" Click="StopThreads_Click" Width="150" Margin="5"/>

            <ProgressBar Name="ProgressBarStatus" Height="20" Width="300" Margin="5"/>

            <StackPanel Orientation="Horizontal">
                <ListBox Name="ListBoxData" Width="180" Height="150" Margin="5"/>
                <ListBox Name="ListBoxCriteria" Width="180" Height="150" Margin="5"/>
                <ListBox Name="ListBoxReports" Width="180" Height="150" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
